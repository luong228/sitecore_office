@using System.Web.Mvc
@using System.Web.Mvc.Html
@model sitecorepro3.Feature.MainContent.Models.LoginUser
<div id="loginBox">
    <div id="loginBoxHomeTop">

        <h2> Login</h2>
        <div class="InputLogin">
            <!--Login Input-->


            @using (Html.BeginForm("LoginBox", "MainContent", FormMethod.Post))
            {
                <fieldset>
                    <legend>
                        Search
                    </legend>
                    <div class="SelectInput">
                        @Html.TextBoxFor(m => m.Username, new { value = "Username", @class = "InputHome LightScheme"})
                    </div>
                    <br />
                    <div class="SelectInput">
                        @Html.PasswordFor(m => m.Password, new { value = "Password", @class = "InputHome LightScheme" })
                    </div>
                    <p class="ForgotPass">
                        <a href="">Forgot password?</a>
                    </p>
                    <span class="SavePass">
                        <!--<a href="#">Se souvenir de moi </a>--> <a href="#">Remember me</a>
                        <input type="checkbox" value="" class="CheckButton" />
                    </span>
                </fieldset>
                <div class="LoginBoxHomeHidden PaddingHiddenHome">
                    <div class="LoginButtonLeft">
                        <div class="LoginButtonRight">
                            <!--<input type="submit" value="connectez-vous" class="CommonFormBtn LoginButton" />-->
                            <input type="submit" value="Login" class="CommonFormBtn LoginButton" />
                        </div>
                    </div>
                    <div class="Clr"></div>
                    <label>
                        @TempData["error"]</label>
                </div>
            }
        </div>
    </div>

    <div id="loginBoxHomeBottom"></div>
</div>