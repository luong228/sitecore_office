@model sitecorepro3.Areas.Product.Models.ProductListVM
@{
    ViewBag.Title = "ProductList2";
}

<h2>ProductList2</h2>
@if (TempData.ContainsKey("NotFound"))
{
    <h2>@TempData["NotFound"]</h2>
}
<div class="list-product">
    @foreach (var item in Model.ProductList)
    {
        <h3>@item.Name</h3>
        <p>@item.Description</p>
        <p>@item.Price</p>
        <p>@item.Quantity</p>
        <img src="@item.ImageUrl" alt="@item.Name"/>
        <br/>
        <a href="@item.GetUrl">@item.Name</a>
    }
</div>

