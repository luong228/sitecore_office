@model List<Sitecore.Data.Items.Item>
@{
    ViewBag.Title = "Search Results";
}
<h2>Search Results</h2>
@if (Model.Count == 0)
{
    <p>No results found.</p>
}
else
{
    <ul>
        @foreach (var product in Model)
        {
            <li>
                <h3>@Html.Sitecore().Field("Name", product)</h3>
                <p>@Html.Sitecore().Field("Description", product)</p>
                <p>Price: @Html.Sitecore().Field("Price", product)</p>
            </li>
        }
    </ul>
}